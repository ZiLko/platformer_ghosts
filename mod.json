{
	"geode": "4.0.0-alpha.1",
	"gd": {
		"win": "2.2074",
		"android": "2.2074",
		"mac": "2.2074"
	},
	"tags": [
		"gameplay", "interface", "offline", "utility", "modtober24"
	],
	"id": "zilko.platformer_ghosts",
	"name": "Platformer Ghosts",
	"version": "v1.1.0",
	"developer": "Zilko",
	"description": "Adds ghosts to platformer mode.",
	"repository": "https://github.com/ZiLko/platformer_ghosts",
	"dependencies": [
        {
            "id": "cvolton.level-id-api",
            "version": ">=v1.1.0-alpha.2",
            "importance": "required"
        }
    ],
	"resources": {
		"sprites": [
			"resources/exportBtn.png",
			"resources/arrow.png",
			"resources/raceGhost.png",
			"resources/spectateGhost.png",
			"resources/spectateGhost2.png"
		]
	},
	"settings": {
		"player_disabled": {
			"name": "Disable Ghost Playing",
			"type": "bool",
			"default": false
		},
		"recorder_disabled": {
			"name": "Disable Ghost Recording",
			"type": "bool",
			"default": false
		},
		"smoothness": {
			"name": "Ghost Smoothness",
			"description": "How smooth the ghosts will appear, measured in updates per second (directly proportional to the file size).",
			"type": "int",
			"min": 15,
			"max": 240,
			"default": 60
		},
		"p1_opacity": {
			"name": "Player 1 ghost opacity (%)",
			"type": "int",
			"min": 0,
			"max": 100,
			"default": 43
		},
		"p2_opacity": {
			"name": "Player 2 ghost opacity (%)",
			"type": "int",
			"min": 0,
			"max": 100,
			"default": 43
		},
		"no_colors": {
			"name": "No Ghost Colors",
			"description": "Makes ghosts white.",
			"type": "bool",
			"default": false
		},
		"no_time_difference": {
			"name": "Disable Time Difference",
			"description": "Disables the time difference shown in endscreen.",
			"type": "bool",
			"default": false
		},
		"off_screen_indicators": {
			"name": "Off-screen indicators",
			"description": "Displays the direction of ghosts when they are off-screen",
			"type": "bool",
			"default": true
		},
		"max_ghosts": {
			"name": "Max Ghosts",
			"description": "Maximum amount of ghosts that will be saved per level.",
			"type": "int",
			"default": 30,
			"min": 1,
			"max": 9999
		},
		"show_ui": {
			"name": "Show Ghost Time",
			"type": "bool",
			"default": false
		}
	}
}
